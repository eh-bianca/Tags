<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ManageTaskActivity">

    <EditText
        android:id="@+id/title"
        android:hint="What's your task?"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true" />

    <Button
        android:onClick="onSave"
        android:layout_alignParentBottom="true"
        android:text="Save"
        android:textSize="20dp"
        android:id="@+id/save"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />


    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:calendarViewShown="false"
        android:layout_above="@+id/save"
        android:layout_alignParentLeft="true"/>

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:layout_alignParentRight="true"
        android:layout_above="@id/save"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assign Points:"
        android:id="@+id/text1"
        android:textSize="18dp"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Point = 1 min. work"
        android:textColor="#ff909090"
        android:id="@+id/text2"
        android:textSize="14dp"
        android:layout_below="@+id/text1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="2dp"/>

    <RadioGroup
        android:layout_below="@id/title"
        android:layout_toRightOf="@id/text2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/radiogroup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:id="@+id/radio10"
            android:onClick="onPointsChanged"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:id="@+id/radio20"
            android:onClick="onPointsChanged"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:id="@+id/radio30"
            android:onClick="onPointsChanged"/>
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set List:"
        android:id="@+id/text3"
        android:textSize="18dp"
        android:layout_below="@+id/radiogroup"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:password="false" />
    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text3"
        android:layout_below="@id/radiogroup"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/spinner"
        android:background="#ff89e5ff" />
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="+"
        android:textSize="19dp"
        android:textAlignment="center"
        android:textDirection="locale"
        android:id="@+id/newList"
        android:onClick="newList"
        android:layout_below="@id/radiogroup"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/spinner" />



</RelativeLayout>

