<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tasks"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff000ac7"
        android:textSize="25dp"
        android:singleLine="false" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hohe Priorität:"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="4dp"/>
    <ListView
        android:layout_below="@+id/textView2"
        android:id="@+id/task_list3"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:background="#ffffffff"
        android:drawSelectorOnTop="false"
        android:textFilterEnabled="false" ></ListView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mittlere Priorität:"
        android:id="@+id/textView3"
        android:layout_below="@+id/task_list3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="4dp"/>
    <ListView
        android:layout_below="@+id/textView3"
        android:id="@+id/task_list2"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:background="#ffffffff"
        android:drawSelectorOnTop="false"
        android:textFilterEnabled="false"
        android:textColor="#ff000ac7"
        android:textAlignment="center"
        android:textDirection="firstStrong"></ListView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Niedrige Priorität:"
        android:id="@+id/textView4"
        android:layout_below="@+id/task_list2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="4dp"/>
    <ListView
        android:layout_below="@+id/textView4"
        android:id="@+id/task_list1"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:background="#ffffffff"
        android:drawSelectorOnTop="false"
        android:textFilterEnabled="false" ></ListView>




</RelativeLayout>
