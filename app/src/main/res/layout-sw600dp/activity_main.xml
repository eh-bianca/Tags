<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#ffedeef8">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Tasks"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff000ac7"
        android:textSize="30dp" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Hohe Priorität:"
        android:id="@+id/textView1"
        android:layout_below="@+id/textView"
        android:textSize="20dp" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Mittlere Priorität:"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Niedrige Priorität:"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:textSize="20dp" />
    <ListView
        android:layout_below="@+id/textView1"
        android:id="@+id/task_list3"
        android:layout_width="220dp"
        android:layout_height="fill_parent"
        android:background="#ffffffff"
        android:drawSelectorOnTop="false"
        android:textFilterEnabled="false" ></ListView>
    <ListView
        android:layout_below="@+id/textView1"
        android:id="@+id/task_list2"
        android:layout_width="220dp"
        android:layout_height="fill_parent"
        android:background="#ffffffff"
        android:drawSelectorOnTop="false"
        android:textFilterEnabled="false"
        android:layout_centerHorizontal="true"></ListView>
    <ListView
        android:layout_below="@+id/textView1"
        android:id="@+id/task_list1"
        android:layout_width="220dp"
        android:layout_height="fill_parent"
        android:background="#ffffffff"
        android:drawSelectorOnTop="false"
        android:textFilterEnabled="false"
        android:layout_alignParentRight="true"></ListView>

</RelativeLayout>
